<view class="page-body">
	<mp-form id="form">
		<mp-cells title="贷款计算器">
			<mp-cell title="贷款金额" >
				<input  class="weui-input" placeholder="贷款金额" />
			</mp-cell>
			<mp-cell title="贷款年限" >
				<input class="weui-input" placeholder="请输入贷款年限" />
			</mp-cell>
			<mp-cell title="贷款利率" >
				<input  class="weui-input" placeholder="请输入贷款利率" />
			</mp-cell>
			<mp-cell  title="还款方式" >
